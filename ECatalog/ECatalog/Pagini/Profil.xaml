<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECatalog.Profil"
             Title="Profil">
    <VerticalStackLayout>
        <Label 
         x:Name="NameLabel"
         Margin="15"
         FontSize="Large"
         VerticalOptions="CenterAndExpand" 
         HorizontalOptions="Center" />
        <Image
         x:Name="Image"
         VerticalOptions="CenterAndExpand"
         WidthRequest="400"
         HeightRequest="200"
         HorizontalOptions="Center" />
        <Label 
         x:Name="YearLabel"
         Margin="20"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
        <Label 
         x:Name="GroupLabel"
         Margin="20"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
        <Label 
         x:Name="SeriesLabel"
         Margin="20"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
        <Label 
         x:Name="FinanceLabel"
         Margin="20"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</ContentPage>