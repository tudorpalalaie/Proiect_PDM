<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECatalog.Profil"
             Title="Profil">
    <VerticalStackLayout>
        <Image
         x:Name="Image"
         WidthRequest="500"
         HeightRequest="200"
         HorizontalOptions="Center"
         VerticalOptions="CenterAndExpand" />
        <Label 
         x:Name="UsernameLabel"
         Margin="10"
         FontSize="Large"
         VerticalOptions="CenterAndExpand" 
         HorizontalOptions="Center" />
        <Label 
         x:Name="NameLabel"
         Margin="15"
         VerticalOptions="CenterAndExpand" 
         HorizontalOptions="Center" />
        <Label 
         x:Name="EmailLabel"
         Margin="15"
         VerticalOptions="CenterAndExpand" 
         HorizontalOptions="Center" />
        <Label 
         x:Name="YearLabel"
         Margin="15"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
        <Label 
         x:Name="SeriesLabel"
         Margin="15"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
        <Label 
         x:Name="GroupLabel"
         Margin="15"
         VerticalOptions="StartAndExpand" 
         HorizontalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</ContentPage>